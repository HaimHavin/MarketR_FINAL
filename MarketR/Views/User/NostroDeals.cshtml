@model IEnumerable<MarketR.Models.FolderPermission>

@{
    ViewBag.Title = "NostroDeals";
}
@if (Session["UserRole"] != null && Session["UserRole"].ToString() != "Admin")
{
    <h2 class="margin-left">Nostro Deals</h2>
    <table id="tblNostroDeals" class="table margin-left">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Deal_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MTM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Deal_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MTM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Folder)
                </td>
                @*
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Deal_N }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Deal_N }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Deal_N })
                    </td>*@
            </tr>
        }

    </table>
}
else
{
    <section>
        <div class="row">
            <h1 style="text-align:center;"><strong>You are not authorizes to view this page.</strong></h1>
        </div>
    </section>
}
<style>
    #tblNostroDeals {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 60%;
    }

        #tblNostroDeals td, #tblNostroDeals th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #tblNostroDeals tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #tblNostroDeals tr:hover {
            background-color: #ddd;
        }

        #tblNostroDeals th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
</style>
